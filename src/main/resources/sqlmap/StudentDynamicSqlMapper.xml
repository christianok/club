<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.earth.message.mapper.StudentDynamicSql">
    <select id="getByConditionIf" resultType="com.earth.message.model.dao.Student">
        select * from t_student
      <where>
          <if test="id != null">
              id=#{id}
          </if>
          <if test="name != null">
              and name =#{name}
          </if>
      </where>

        <foreach collection="ids" item="item_id" open="where item_id in(" close=")">

        </foreach>
    </select>

    <insert id="">

    </insert>
</mapper>